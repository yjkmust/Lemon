<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ADDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowAnimationStyle">@style/ADDialogAnimation</item>
    </style>
    <style name="ADDialogAnimation" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/starting_up</item>
    </style>
</resources>
